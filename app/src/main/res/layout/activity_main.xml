<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:title="WebCoderPro"
        android:titleTextColor="#FFFFFF"
        android:padding="8dp" />

    <!-- Project Selector -->
    <Spinner
        android:id="@+id/projectSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tabEditor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editor" />

        <Button
            android:id="@+id/tabPreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Preview" />

        <Button
            android:id="@+id/btnDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ™" />

        <Button
            android:id="@+id/btnExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¬‡ï¸" />
    </LinearLayout>

    <!-- File List -->
    <ListView
        android:id="@+id/fileList"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <Button
        android:id="@+id/btnNewFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âž• New HTML File" />

    <!-- Editor -->
    <EditText
        android:id="@+id/htmlEditor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="Write HTML / CSS / JS here"
        android:inputType="textMultiLine"
        android:padding="8dp" />

    <!-- Preview -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>
